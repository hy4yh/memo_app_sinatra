<div class="memo">
  <%= escape_html(memo_hash[:title]) %></br>
  <%= n_to_br(escape_html(memo_hash[:content])) %></br>
</div>
<form class="show-form" action="/memos/<%= "#{memo_hash[:uuid]}" %>" method="post">
  <a class="show-form__change-btn" href="/memos/<%= "#{memo_hash[:uuid]}" %>/edit">変更</a>
  <input type="hidden" name="_method" value="DELETE">
  <input class="show-form__delete-btn" type="submit" value="削除">
  <a class="show-form__top-btn" href="/memos">トップへ</a>
</form>
